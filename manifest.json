{
  "manifest_version": 3,
  "name": "YouTube Manager",
  "version": "1.0",
  "description": "Manage YouTube Watch Later playlist and Subscriptions",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/playlist*",
        "https://www.youtube.com/feed/channels*"
      ],
      "js": [
        "src/utils/common.js",
        "src/features/watchLater/constants.js",
        "src/features/watchLater/ui.js",
        "src/features/watchLater/videoManager.js",
        "src/features/watchLater/watchLaterControls.js",
        "src/features/subscriptions/constants.js",
        "src/features/subscriptions/ui.js",
        "src/features/subscriptions/channelManager.js",
        "src/features/subscriptions/subscriptionControls.js",
        "src/content.js"
      ],
      "css": [
        "src/utils/common.css",
        "src/features/watchLater/watchLaterStyles.css",
        "src/features/subscriptions/subscriptionStyles.css"
      ]
    }
  ]
}